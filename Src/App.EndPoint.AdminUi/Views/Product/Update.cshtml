@using App.Infrastructure.DataBase.Entities
@model Product

<div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title"> ویرایش محصول @Model.Name</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form role="form"  asp-controller="Product" asp-action="Update" method="post">
                <div class="card-body">
                  <div class="form-group">
                    <label >نام محصول</label>
                    <input  class="form-control"  asp-for="Name" placeholder="نام محصول">
                  </div>
                   <div class="form-group">
                    <label >دسته بندی</label>
                    <input  class="form-control"  asp-for="Category" placeholder="دسته بندی محصول">
                  </div>
                   <div class="form-group">
                    <label >مدل</label>
                    <input  class="form-control"  asp-for="Model" placeholder="مدل محصول">
                  </div>
                   <div class="form-group">
                    <label >برند</label>
                    <input  class="form-control"  asp-for="Category" placeholder="برند محصول">
                  </div>
                 
                  <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">مرا بخاطر بسپار</label>
                  </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">ارسال</button>
                </div>
              </form>
            </div>
           

           
       