@using App.EndPoint.ShopUi.Areas.Admin.Models.ViewModels.User

@model List<UserManagerViewModel>
{
    ViewData["Title"] = "لیست کاربران";
    Layout = "_AdminLayout";
}

<div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-light">
                    کاربران سایت
                </div>
                <div class="card-body">
                    <p>
                        <a asp-area="Admin"  asp-controller="Account" asp-action="Register" class="btn btn-primary">افزودن کاربر جدید</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                     عکس پروفایل
                                    </th>
                                    <th class="text-center">
                                      نام 
                                    </th>
                                    <th class="text-center">
                                      نام خانوادگی
                                    </th>
                                    <th class="text-center">
                                      نام کاربری
                                    </th>
                                    <th class="text-center">
                                       شماره موبایل
                                    </th>
                                    <th class="text-center">
                                       ایمیل
                                    </th>
                                    <th class="text-center">
                                       نقش ها
                                    </th>
                                    <th class="text-center">
                                       فعال/غیرفعال
                                    </th>
                                    <th class="text-center">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            @if (item.ProfileImgUrl != null)
                                            {
                                              
                                            }

                                            else
                                            {
                                                <img src="~/images/UserPic.png" height="40" />
                                            }
                                        </td>
                                        <td class="text-center">
                                            @*@Html.DisplayFor(modelItem => item.FirstName)*@
                                           @item.FirstName
                                        </td>
                                        <td class="text-center">
                                           @item.LastName

                                        </td>
                                        <td class="text-center">
                                           @item.UserName
                                        </td>
                                        <td class="text-center">
                                           @item.PhonNumber
                                        </td>
                                        <td class="text-center">
                                           @item.Email


                                        </td>
                                        <td class="text-center">
                                            @foreach (var role in item.Roles)
                                            {
                                                <span class="badge badge-primary">
                                                    @role
                                                </span>
                                            }

                                        </td>
                                        <td class="text-center">
                                            <span class="badge @(item.IsActive==true?"badge-success":"badge-danger")">
                                                @(item.IsActive==true?"فعال":"غیرفعال")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="DetailsUser" asp-route-id="@item.Id" class="btn btn-primary btn-icon">
                                                <i class="fa fa-user"></i> مدیریت کاربر
                                            </a>

                                            <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-success btn-icon">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a asp-action="DeleteUser" asp-route-id="@item.Id" class="btn btn-danger btn-icon">
                                                <i class="fa fa-trash"></i>
                                            </a>


                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                      
                    </div>


                </div>
            </div>
        </div>
    </div>

