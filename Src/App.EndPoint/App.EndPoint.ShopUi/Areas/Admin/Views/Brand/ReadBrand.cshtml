@using App.EndPoint.ShopUi.Area.Admin.Models.ViewModels.BaseData


@model List<BrandReadViewModel>
@{
    ViewData["Title"] = "لیست برند ها";
    Model.OrderBy(x => x.DisplayOrder);
    int rowCount = 1;
}
<h3 style="float:right">لیست برند ها</h3>
<div style="float:left">
    <a class="btn btn-success" asp-controller="Brand" asp-action="InsertBrand" asp-area="Admin">جدید  </a>
</div>
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
           
            <th scope="col" >نام برند</th>
            <th scope="col">تاریخ ثبت برند</th>
            <th scope="col">عملیات</th>

        </tr>
    </thead>


    <tbody>
        @foreach (var Item in Model)
        {
            <tr>

                <td scope="row">
                    @rowCount
                </td>
              
                <td>@Item.Name</td>
                <td>@Item.CreationDate</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Brand" asp-action="UpdateBrand"  asp-area="Admin" asp-route-id="@Item.Id" >
                        ویرایش
                    </a>
                    <a class="btn btn-danger" asp-controller="Brand" asp-action="RemoveBrand" asp-area="Admin"  asp-route-id="@Item.Id">
                        حذف
                    </a>
                </td>


            </tr>
        }



    </tbody>
</table>
