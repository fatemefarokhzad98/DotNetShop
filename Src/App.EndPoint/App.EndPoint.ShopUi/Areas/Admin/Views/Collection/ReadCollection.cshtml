@using App.EndPoint.ShopUi.Area.Admin.Models.ViewModels.BaseData


@model List<CollectionReadViewModel>
@{
    ViewData["Title"] = "لیست دسته بندی نمایش ها";   
}
<h3 style="float:right">لیست دسته بندی نمایش ها</h3>
<br />
<div style="float:left">
    <a class="btn btn-success" asp-controller="Collection" asp-action="InsertCollection" asp-area="Admin">جدید  </a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            
            
            <th scope ="col" >نام دسته بندی نمایش</th>
            <th  scope ="col">تاریخ ثبت</th>
            <th scope ="col">عملیات</th>

        </tr>
    </thead>
      
    
    <tbody>
       @foreach(var Item in Model){
        <tr>
           
        
           
            <td >@Item.Name</td>
            <td  >@Item.CreationDate</td>
           
            <td>
                <a  class="btn btn-primary"  asp-controller="Collection"  asp-action="UpdateCollection" asp-area="Admin" asp-route-id="@Item.Id"  >
                    ویرایش 
                </a>
                <a   class="btn btn-danger" asp-controller="Collection" asp-action="RemoveCollection"  asp-area="Admin" asp-route-id="@Item.Id">
                    حذف
                </a>
            </td>


        </tr>}



    </tbody>
</table>
