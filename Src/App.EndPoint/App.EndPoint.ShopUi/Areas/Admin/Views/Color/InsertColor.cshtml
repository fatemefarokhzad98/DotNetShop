@using App.EndPoint.ShopUi.Area.Admin.Models.ViewModels.BaseData


@model ColorInsertViewModel
@{
    ViewData["Title"] = "اضافه کردن رنگ جدید";   
}
<h3>اضافه کردن رنگ جدید</h3>
<form>

    <div  class="form-group"> 
        <label asp-for="Name"  > </label>
      <input   class="form-control" asp-for="Name" />
       <span asp-validation-for="Name"  ></span>

    </div>
     <div  class="form-group">
      <label asp-for="ColorCode"  > </label>
      <input   class="form-control" asp-for="ColorCode" />
       <span asp-validation-for="ColorCode"  ></span>

    </div>
    <div style="float:left; margin-top:5px;   " >
       
        <button type="submit" class="btn btn-primary" asp-action="InsertColor"asp-area="Admin"  asp-controller="Color" formmethod="post"  >ثبت رنگ</button>
        <button type="submit" class="btn btn-danger"  asp-action="ReadColor" asp-area="Admin" asp-controller="Color" >انصراف</button>

    </div>
   




</form>
