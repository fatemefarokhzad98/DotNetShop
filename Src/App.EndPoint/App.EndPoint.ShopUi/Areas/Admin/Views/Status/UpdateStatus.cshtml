@using App.EndPoint.ShopUi.Areas.Admin.Models.ViewModels.BaseData
@model StatusCreateViewModel
@{

    ViewData["Title"] = "تغییر وضعیت";
    Layout = "_AdminLayout";

}

<h3>اضافه کردن وضعیت جدید</h3>
<form>

    <div  class="form-group"> 
        <label asp-for="Title"  > </label>
      <input  type="text"  class="form-control" asp-for="Title" />
      <span asp-validation-for="Title"  ></span>
      </div>
   <div class="form-group my-2">
                <input asp-for="ForComment" type="radio" id="true"  value="True"name="ForComment" />
                <label for="true">فعال</label>
                <input asp-for=ForComment type="radio" id="false" name="ForComment" value="False" />
                <label for="false">غیر فعال</label>
                <span asp-validation-for="ForComment" class="text-danger"></span>
            </div>
            
   <div class="form-group my-2">
                <input asp-for="ForProduct" type="radio" id="true"  value="True" name="ForProduct" />
                <label for="true">فعال</label>
                <input asp-for=ForProduct type="radio" id="false" name="ForProduct" value="False" />
                <label for="false">غیر فعال</label>
                <span asp-validation-for="ForProduct" class="text-danger"></span>
            </div>
             <div class="form-group my-2">
                <input asp-for="ForOrder" type="radio" id="true"  value="True" name="ForOrder" />
                <label for="true">فعال</label>
                <input asp-for=ForOrder type="radio" id="false" name="ForOrder" value="False" />
                <label for="false">غیر فعال</label>
                <span asp-validation-for="ForOrder" class="text-danger"></span>
            </div>
    <div style="float:left; margin-top:5px;   " >
       
        <button type="submit" class="btn btn-primary" asp-action="UpdateStatus" asp-controller="Status" asp-area="Admin" formmethod="post"  >ثبت </button>
        <button type="submit" class="btn btn-danger"  asp-action="ReadStatus" asp-controller="Status" asp-area="Admin" >انصراف</button>

    </div>
   




</form>
