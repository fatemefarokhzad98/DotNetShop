@using App.EndPoint.ShopUi.Area.Admin.Models.ViewModels.BaseData

@model ModelUpdateViewModel
@{
    ViewData["Title"] = "ویرایش مدل ها";   
}
<h3>ویرایش مدل ها</h3>

<form asp-controller="Model" asp-action="UpdateModel" asp-area="Admin" method="post" >
