@model RegisterViewModel 

@{
    ViewData["Title"] = "ثبت نام";
    Layout = null;

}
  <html lang="FA-IR" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,user-scalable=no"1.0">
    <title> فروشگاه دات نت </title>
    <link rel=" stylesheet" href="~/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="~/font/bootstrap-icon/bootstrap-icons.css">
    <link rel="stylesheet" href="~/plugin/waves/waves.min.css">
    <link rel="stylesheet" href="~/plugin/swiper/swiper-bundle.min.css">
    <link rel="stylesheet" href="~/plugin/timer/timer.css">
    <link rel="stylesheet" href="~/plugin/hint-css/hint-css.css">
    <link rel="stylesheet" href="~/plugin/bootstrap-touchspin/jquery.bootstrap-touchspin.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/responsive.css">

</head>

<body>

    <!-- start main-data -->
    <div class="content">
        <div class="container-fluid">
            <div class="content-box">
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-xl-4 col-sm-8">
                        <div class="auth shadow-box rounded-4 p-4">
                            <div class="auth-content">
                                <h3 class="font-20 text-center auth-title-form">ثبت نام در فروشگاه</h3>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <form asp-action="Register" asp-controller="Account" class="mt-3">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control float-input" asp-for="UserName" />
                                        <label asp-for="UserName" ></label>
                                        <span asp-validation-for= "UserName"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input   type="text" class="form-control float-input"  asp-for="Mobile" />
                                          
                                        <label asp-for="Mobile"></label>
                                        <span asp-validation-for="Mobile" ></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control float-input" asp-for="Password" />
                                           
                                        <label asp-for="Password"> </label>
                                          <span asp-validation-for="Password" ></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control float-input" asp-for="ConfirmPassword" />
                                           
                                        <label asp-for="ConfirmPassword"> </label>
                                          <span asp-validation-for="ConfirmPassword" ></span>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit"
                                            class="btn main-color-three-bg border-0 rounded-pill w-100 text-white waves-effect waves-light">ثبت
                                            نام</button>
                                    </div>
                                </form>
                                <div class="divider">
                                    <span>یا</span>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <a asp-action="Login" asp-controller="Account">حساب کاربری دارم ! ورود به فروشگاه</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end main-data -->


    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/plugin/waves/waves.min.js"></script>
    <script src="~/plugin/swiper/swiper-bundle.min.js"></script>
    <script src="~/plugin/timer/timer.js"></script>
    <script src="~/plugin/hint-css/hint-css.js"></script>
    <script src="~/plugin/bootstrap-touchspin/jquery.bootstrap-touchspin.min.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/jquery-app.js"></script>

    <!-- ===== start new update 3.2.0 -->
    <script src="~/plugin/go-to-top/script.js"></script>
    <script src="~/plugin/rasta-contact/script.js"></script>

    <link rel="stylesheet" href="~/plugin/go-to-top/style.css">
    <link rel="stylesheet" href="~/plugin/rasta-contact/style.css">

</body>

</html>
   