
@model List<ShortProductViewModel>
@{
    ViewData["Title"] ="لیست محصولات "; 
   
}

 <div class="product-box py-20">
        <div class="container-fluid">
            <div class="parent">
              <div class="content-title">
                <div class="swiper free-mode" id="product-box">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            @foreach(var item in Model)
                            {
                            <div class="product-box-item bg-white">
                                @foreach(var color in item.Colors)
                                {
                                <div class="hover">
                                    <div class="hover-color">
                                        <span style="background-color: @color.ColorCode " 
                                            class="hint--left">@color.Name</span>
                                        
                                    </div>
                                </div>
                                }
                                <a href="">
                                    <div class="image text-center">
                                        <img src=@item.Image alt="" class="img-fluid one-image">
                                        
                                    </div>
                                    <div class="desc">
                                        <div class="title">
                                            <h6 class="title-fa def-color fw-bold text-overflow-2">
                                                @item.Name
                                            </h6>
                                            <h6 class="title-en text-muted text-overflow-2">
                                               @item.BrandName
                                            </h6>
                                        </div>
                                        <div class="foot d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center justify-content-center">
                                                <div class="add hint--right" data-hint="افزودن به سبد خرید" >
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                        fill="currentColor" class="bi bi-bag" viewBox="0 0 16 16">
                                                        <path
                                                            d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z" />
                                                    </svg>
                                                </div>

                                            </div>
                                            <div class="price d-flex flex-column justify-content-end">
                                               
                                                <div class="d-flex justify-content-center align-items-center" >
                                                    <span  class="text-muted font-14 text-decoration-line-through">  @item.Price  </span>
                                                       
                                                    <span class="text-muted font-14 ms-2">تومان</span>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </a>
                            </div>
                            }
                        </div>
                    
                    </div>
                    
               
                </div>
                </div>
            </div>
        </div>
    </div>
