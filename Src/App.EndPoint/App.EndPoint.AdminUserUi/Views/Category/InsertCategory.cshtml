@using App.Domain.Core.BaseData.Dtos
@using App.EndPoint.AdminUserUi.Models.ViewModels.BaseData

@model CategoryInsertViewModel
@{
    ViewData["Title"] = "اضافه کردن دسته بندی جدید";
}
<h3>اضافه کردن دسته بندی جدید</h3>
<form>

    <div class="form-group">
        <label asp-for="Name"> </label>
        <input class="form-control" asp-for="Name" />

    </div>

    <div class="form-group">

        <label asp-for="ParentCategoryId" class="control-label"></label>

        <br />

        <select  asp-for="ParentCategoryId" asp-items="@ViewBag.Categories"  class="form-control">

            <option style="display:none;" value="">انتخاب کنید</option>

        </select>

    </div>
    <div class="form-group">
        <label asp-for="DisplayOrder"> </label>
        <input class="form-control" asp-for="DisplayOrder" />

    </div>
    <div class="form-group">
        <label asp-for="IsActive"> </label>
        <input class="form-control" asp-for="IsActive" />
    </div>

    <div style="float:left; margin-top:5px;   ">

        <button type="submit" class="btn btn-primary" asp-action="InsertCategory" asp-controller="Category" formmethod="post"> ثبت دسته بندی </button>
        <button type="submit" class="btn btn-danger" asp-action="ReadCategory" asp-controller="Category">انصراف</button>

    </div>





</form>
