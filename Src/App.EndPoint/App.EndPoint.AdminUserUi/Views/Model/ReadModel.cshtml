@using App.EndPoint.AdminUserUi.Models.ViewModels.BaseData

@model List<ModelReadViewModel>
@{
    ViewData["Title"] = "لیست مدل ها";   
  
}
<h3 style="float:right">لیست مدل ها</h3>
<br />
<div style="float:left">
    <a class="btn btn-success" asp-controller="Model" asp-action="InsertModel">جدید  </a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            
           
            <th scope="col" >نام مدل</th>
            <th scope="col">زیرمجوعه</th>
            <th scope="col">برند</th>
            <th scope="col">عملیات</th>

        </tr>
    </thead>
      
    
    <tbody>
       @foreach(var Item in Model){
        <tr>
           
        
           
            <td>@Item.Name</td>
            <td>@Item.ParentName</td>
            <td>@Item.BrandName</td>
            <td>
                <a  class="btn btn-primary"  asp-controller="Model"  asp-action="UpdateModel" asp-route-id="@Item.Id">
                    ویرایش 
                </a>
                <a   class="btn btn-danger" asp-controller="Model" asp-action="RemoveModel" asp-route-id="@Item.Id" >
                    حذف
                </a>
            </td>


        </tr>}



    </tbody>
</table>
